{{#form-wrapper submitText='Register' as |form|}}
  <fieldset>
    <legend>Join Us!</legend>
    {{form.textInput placeholder='Playername' tooltipText='The name that will be displayed to other players. This is how you will be known on the site.'}}
    {{form.textInput placeholder='Login' tooltipText='The login must be between 8 and 255 characters in length, and can only be made up of ASCII characters. It will never be shown to other players.'}}
    {{form.textInput type='password' placeholder='Password' tooltipText='The password must be between 8 and 50 characters in length.'}}
    {{form.textInput placeholder='Confirm Password' tooltipText='Must match the password provided above.'}}
    {{form.textInput placeholder='Email' tooltipText='Will be the primary point of with staff and for password resets.'}}
    {{#form.checkboxInput checked=tosAccepted}}
      Agree to {{#link-to 'terms-of-service'}}Terms of Service{{/link-to}}
    {{/form.checkboxInput}}
  </fieldset>
{{/form-wrapper}}
