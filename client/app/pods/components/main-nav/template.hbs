<nav id="main-desktop-nav" class="top-bar" role="navigation">
	<div class="top-bar-left">
   	<ul class="menu">
      {{#if session.isAuthenticated}}
        <li>{{#link-to 'play'}}Play{{/link-to}}</li>
      {{/if}}
    </ul>
   </div>
   <div class="top-bar-right">
    <ul class="menu">
      {{#unless session.isAuthenticated}}
        <li><a href="#" {{action "showLoginModal"}}>Login</a></li>
        <li><a href="#" {{action "showRegistrationModal"}}>Register</a></li>
      {{/unless}}
      {{#if session.isAuthenticated}}
        <li><a href="#" {{action 'invalidateSessioninvalidateSession'}}>Logout</a></li>
      {{/if}}
    </ul>
  </div>
</nav>

{{modal-wrapper id="login_modal" modal="login-modal" onConfirm=(action "closeLoginModal") onCancel=(action "closeLoginModal")}}

{{modal-wrapper id="registration_modal" modal="registration-modal" onConfirm=(action "closeRegistrationModal") onCancel=(action "closeRegistrationModal")}}

